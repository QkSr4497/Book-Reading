  var langPreferred = {{{json userData.langPreferred}}};  // global variable which is used in language.js file
</script>

 <script type="text/javascript" src="/js/navigation.js"></script>

 <script src="/js/kid/kid-page-scripts.js"></script>

</body>

</html>