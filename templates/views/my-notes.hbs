        <div class="title">
            <h2>📄 My Notes</h2>
        </div> 
        <div class="my-notes-style">

            <button id="addnotebtn" class="addbtn" type="button" name="button"  onclick="document.getElementById('id01').style.display='block'">
            Add New Note
            </button>

            <input type="text" id="myInput" onkeyup="myNoteSearch()"  placeholder="🔍Search.." title="Type in a name">
            <div class="dropdown">
            <button onclick="dropdownFunc()" class="dropbtn" id="dropbutton">
            <span>Note Tilte </span><span>Book Name </span>
            </button>
            <div id="myDropdown" class="dropdown-content">
                <form action="">
                <button>Remove</button>
                <button>Update</button>
                </form>
            </div>
            </div>  


        <div id="id01" class="modal">

        <form class="" action="">
            <label for="nname">Note Name</label>
            <input type="text" id="nname" name="notename" placeholder="Your Note Name..">

            <input type="radio" name="type" value="general" onclick="if(this.checked){hideBooks()}"> general note<br>
            <input type="radio" name="type" value="book"  onclick="if(this.checked){showBooks()}"> book's note<br>

            <div id="book-options" >
            <label for="book-name">Book Name</label>
            <select id="my-books-options" name="my-books-op">
            <option value="australia">Australia</option>
            </select>
            </div>  

            <label for="subject">Subject</label>
            <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>

            <button>Add new note</button>


            <div class="container" style="background-color:#f1f1f1">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">
                Cancel
            </button>
            </div>
        </form>
        </div> 


        </div>
