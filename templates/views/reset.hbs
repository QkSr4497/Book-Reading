<!DOCTYPE html>
<html lang="en">

<head>
	<title>Reset password page</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="../pages/Login/images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../pages/Login/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../pages/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../pages/Login/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../pages/Login/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../pages/Login/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../pages/Login/css/util.css">
	<link rel="stylesheet" type="text/css" href="../pages/Login/css/main.css">
	<!--===============================================================================================-->

	<!-- STYLE CSS -->
	<link rel="Stylesheet" href="../css/style.css" />
  	<link rel="Stylesheet" href="../css/reset.css" />


	{{!-- this file contains a function for choosing a random photo,  it must be placed in head--}}
	<script src="../js/login-scripts.js"></script>

</head>

<body>
	<div class="navbar">
		{{> header }}
	</div>



	<div class="limiter">

		<div class="container-login100">

			<div class="wrap-login100">

        <div class="container">
          {{#if errorMsg}}
            <div class="alert alert-danger input-feedback" role="alert" dir="rtl">
              <h1>{{errorMsg}}</h1>
            </div> <br> <br> <br>
          {{/if}}
          {{#if infoMsg}}
            <div class="alert alert-success input-feedback" role="alert" dir="rtl">
              <h1>{{infoMsg}}</h1>
            </div> <br> <br> <br>
          {{/if}}
        </div>

				<div class="login100-pic js-tilt" data-tilt>
					{{!-- <img src="pages/Login/images/img-04.png" alt="IMG"> --}}
					<script type="text/javascript">getRandomImage(random_images_array);</script>
				</div>

				<form method="POST" name="myForm" class="login100-form validate-form" action="/reset/{{token}}">
					<span class="login100-form-title">
						Reset Password
					</span>

					<div class="wrap-input100 validate-input" data-validate="what">
						<input id="pass1" class="input100" type="password" name="password" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>

          <div class="wrap-input100 validate-input" data-validate="what">
						<input id="pass2" class="input100" type="password" name="confirm" placeholder="Confirm password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<button type="button" class="login100-form-btn" onclick=" return checkAllInputs()">
							Update Password
						</button>
					</div>
				</form>

        <div id="snackbar">Please Correct all Inputs with <span style='color: rgb(255, 0, 0)'>red</span> comment .</div>

			</div>
		</div>
	</div>




	<!--===============================================================================================-->
	<script src="../pages/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="../pages/Login/vendor/bootstrap/js/popper.js"></script>
	<script src="../pages/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="../pages/Login/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="../pages/Login/vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<!--===============================================================================================-->
	{{!-- <script src="../pages/Login/js/main.js"></script> --}}

  <!-- Javascripts  -->
	<!-- placing the script at the end makes sure that the script runs after all the elemnts are available -->
	<script type="text/javascript" src="../js/reset-scripts.js"></script>

</body>

</html>