<!DOCTYPE html>
<html lang="en" class="no-js">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
         <link rel="Stylesheet" href="/css/teacher/group-status.css" />
    <title>{{userData.userType}} - Group status</title>

    <!-- Favicon -->

    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <!-- Stylesheets -->

    {{> grown_up_head}}
</head>

<body>
    


    <div class="container">
        {{> grown_up_body}}

        <header>
            <h1>מצב הקבוצה לפי בחנים</h1>
        </header>

        <div class="quiz_section">
                <select name="" id="quizSelected" onchange="getSelected()" dir="rtl"> 
                    <option value="">הכל</option>
                    {{#each getGroupStatusQuiz.getGroupQuizes}}
                    <option class="quizName" value="">{{quizTitle}}</option>
                    {{/each}}
                </select>
        </div>

     <div class="resultsSection">
        <table id="AllQuizResults">
            <tr>
                <th style="background-color: #A77CF5">ציון של בוחן</th>
                <th  style="background-color: #BD9DF7">בוחן</th> 
                <th  style="background-color: #C9B1F5">שם של ילד</th>          
            </tr>
            {{#each getGroupStatusQuiz.getGroupStatus}}
            <tr >
                <td style="background-color:#E6E2ED " >{{grade}}</td>
                <td style="background-color: #E6E2ED" class="quizName" vlaue="{{quizTitle}}">{{quizTitle}}</td>
                <td style="background-color:#E6E2ED ">{{firstName}} {{lastName}}</td>
            </tr>
            {{/each}}
            {{!-- {{#each getGroupStatusQuiz.getGroupMembers}}
            <tr id="restMembers" style="display: none" >
                <td style="background-color:#E6E2ED " >{{grade}}</td>
                <td style="background-color: #E6E2ED" class="quizName" vlaue="{{quizTitle}}">{{quizTitle}}</td>
                <td style="background-color:#E6E2ED ">{{firstName}} {{lastName}}</td>
            </tr>
            {{/each}} --}}
        </table>

       
    </div>


    </div> <!-- /container -->


    

    {{> grown_up_footer}}

    <!--====== Javascripts & Jquery ======-->
   
</body>
<script>


function getSelected(){
	var e = document.getElementById("quizSelected");
	var result =e.options[e.selectedIndex].text;
    var input, filter, tr, a, i, txtValue,table,td;
    table = document.getElementById("AllQuizResults");
    tr = table.getElementsByTagName('tr');
    //restMembersTr=document.getElementById("restMembers");
  for (i = 1; i < tr.length; i++) {
    td=tr[i].getElementsByTagName('td');
    //a = tr[i].getElementsByClassName("quizName").textContent;
    a = td[1].textContent;
     console.log("a  "+a);
    if (result==a) {
     tr[i].style.display = "";
     //restMembersTr.style.display="block";
    } else if(result=="הכל") {
      tr[i].style.display = "";
    }else {
      tr[i].style.display = "none";
    }
  }
}
</script>
</script>
</html>