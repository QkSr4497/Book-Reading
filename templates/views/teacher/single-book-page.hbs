	<!-- Stylesheets -->
    

	<!-- Main Stylesheets -->


<style>
.wrapper { 
  border : 2px dotted #ccc; padding: 2px;
   
  
}

.wrapper div {
   width: 100%; 
   min-height: 400px;
   padding: 10px;
   -webkit-box-sizing: border-box;
   -moz-box-sizing: border-box;
   box-sizing: border-box;
   
   
}
#one { 
    background-color: rgb(190, 255, 252); 
    background-image: url('/img/backgrounds/blue-science.jpg');
}
#two { background-color: rgb(243, 250, 183);
 text-align:center;
 background-image: url('/img/backgrounds/blue-transitioning.jpg');
   
   }

/* This will style any <img> element in .parent div */
#one img {
   max-width:100%;
max-height:100%;
   
}

 #two h1 {
    color: aliceblue;
}
#author {
    color: aliceblue;
}




@media screen and (min-width: 600px) {
   .wrapper {
      height: auto; overflow: hidden; // clearing 
   }
   #one { width: 300px; float: left; }
   #two { margin-left: 200px; }
}
</style>



  {{> teacher_head}}
</head>

<body>

  <div class="container">
    {{> teacher_body}}
    <header>
      <h1>Book Information</h1>
    </header>



      {{#bookData}}


<div class="wrapper">
    <div id="one"><h1><img src="{{pic}}"
              onerror="this.onerror=null;this.src='/img/books/default-book.gif';" /></div>
    <div id="two"><h1>Book Name : {{bookName}} </h1><span id="author">Author: {{authorFirstName}} {{authorLastName}}</span></div>
  </div>
      {{/bookData}}

  </div><!-- /container -->

  


