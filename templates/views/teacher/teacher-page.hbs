    <div class="modal-style">
    <div id="newquiz" class="modal">
      <form class="modal-content animate" action="/">
        <div class="container">
          <h3>Create A New Quiz 📝</h3>
          <hr>
          <label for="qname"><b>Quiz Title</b></label>
          <input type="text" placeholder="Enter Quiz Title" name="qname" required>

          <label for="lang"><b>Language</b></label>
          <select name="qlanguage" id="qlanguage" required>
              <option value="">Arabic</option>
              <option value="">Hebrow</option>
              <option value="">English</option>
          </select>

          <label for="time"><b>Time</b></label>
          <select name="time" id="time" required>
              <option value="">1 min</option>
              <option value="">2 min</option>
              <option value="">5 min</option>
          </select>

          <label for="file"><b>Title Image</b></label>
          <input type="file" id="title-image" placeholder="Add a title image" accept="image/gif, image/jpeg, image/jpg, image/svg+xml, image/svg, image/png, image/x-png, image/pjpeg">
          <button type="button" onclick="document.getElementById('newquiz').style.display='none'" class="cancelbtn">Cancel</button>
          <button type="submit" name="button" class="okbtn" id="quizadd">Create</button>
        </div>
      </form>
    </div>
</div>
<div class="modal-style">
    <div id="newgroup" class="modal">
      <form class="modal-content animate" action="/">
        <div class="container">
          <h3>Create A New Group 👨‍👩‍👦‍👦</h3>
          <hr>
          <label for="gname"><b>Group Name</b></label>
          <input type="text" placeholder="Enter Group Name" name="gname" required>

          <label for="file"><b>Group Image</b></label>
          <input type="file" id="group-image" placeholder="Add a title image" accept="image/gif, image/jpeg, image/jpg, image/svg+xml, image/svg, image/png, image/x-png, image/pjpeg">

          <label for="text"><b>Add Members</b></label>
          <select name="member" id="member" required>
              <option value="">Arabic</option>
              <option value="">Hebrow</option>
              <option value="">English</option>
          </select>

          <button type="button" onclick="document.getElementById('newgroup').style.display='none'" class="cancelbtn">Cancel</button>
          <button type="submit" name="button" class="okbtn">Add new book</button>
        </div>
      </form>
    </div>
</div>







